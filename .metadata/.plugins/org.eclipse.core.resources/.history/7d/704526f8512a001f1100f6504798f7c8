// I2C communication
uint8_t TxCount = 0;
uint8_t RxCount = 0;
uint8_t RxData[RxSize];

// Storing data in a register
uint16_t Registers[RegSize] = {0, 0, 1, 0}; // PWM, Direction, Current, RPM, Temp
int StartReg = 0;
int NumReg = 0;
int EndReg = 0;

extern int Buzzer;

extern HAL_StatusTypeDef ret;

